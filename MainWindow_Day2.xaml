<Window x:Class="WpfDocLearning.MainWindowDay2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:WpfDocLearning.Models"
        xmlns:vm="clr-namespace:WpfDocLearning.ViewModels"
        Title="WPF Day2 - Templates" Height="550" Width="900">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type models:Item}" x:Key="ItemDataTemplate">
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,8,0"/>
                <TextBlock Text="(active)" Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="8" BorderBrush="Gray" BorderThickness="1">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ListBoxItem" x:Key="ItemListBoxItemStyle">
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- HierarchicalDataTemplate for TreeView (nested children property) -->
        <HierarchicalDataTemplate x:Key="ItemHierarchyTemplate" ItemsSource="{Binding Children}" DataType="{x:Type models:Item}">
            <TextBlock Text="{Binding Name}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Add Sample" Command="{Binding AddItemCommand}"/>
                <MenuItem Header="Exit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Toggle Active" Command="{Binding ToggleActiveCommand}"/>
            </MenuItem>
        </Menu>

        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Styled Items List (DataTrigger + ControlTemplate)" FontWeight="Bold" Margin="0,0,0,6"/>
                <ListBox ItemsSource="{Binding Items}" 
                         ItemTemplate="{StaticResource ItemDataTemplate}"
                         ItemContainerStyle="{StaticResource ItemListBoxItemStyle}"
                         SelectedItem="{Binding SelectedItem}" Height="180"/>

                <Separator Margin="0,8"/>
                <TextBlock Text="Hierarchical Data (TreeView)" FontWeight="Bold" Margin="0,6,0,6"/>
                <TreeView ItemsSource="{Binding Items}" ItemTemplate="{StaticResource ItemHierarchyTemplate}" Height="200"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="ControlTemplate example (custom button)" FontWeight="Bold" Margin="0,0,0,8"/>
                <Button Template="{StaticResource RoundedButtonTemplate}" Content="Custom Button" Background="LightSteelBlue" Width="150" Height="40"/>

                <Separator Margin="0,8"/>

                <TextBlock Text="Simple Animation (hover to animate rectangle)" FontWeight="Bold" Margin="0,0,0,8"/>
                <Border Padding="12" BorderThickness="1" CornerRadius="6" BorderBrush="LightGray">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Hover the rectangle below to animate" Margin="0,0,0,8"/>
                        <Rectangle Grid.Row="1" Width="200" Height="80" RadiusX="8" RadiusY="8">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Fill" Value="LightBlue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="300" Duration="0:0:0.25"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Height" To="110" Duration="0:0:0.25"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="200" Duration="0:0:0.25"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Height" To="80" Duration="0:0:0.25"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
